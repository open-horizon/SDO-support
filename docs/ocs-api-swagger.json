          "type": "object",
          "properties": {
            "pv": {
              "type": "integer",
              "format": "int32"
            },
            "pe": {
              "type": "integer",
              "format": "int32"
            },
            "r": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "g": {
              "type": "string",
